<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="Newsletter subscription management for Tahoe Night Nanny">
    
    <!-- Google Fonts - Lato -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'navy': {
                            '800': '#1e3a8a',
                            '900': '#1e40af',
                            '700': '#1d4ed8',
                            '300': '#93c5fd'
                        }
                    }
                }
            }
        }
    </script>
    
    <style>
        body {
            font-family: 'Lato', system-ui, sans-serif;
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            text-rendering: optimizeLegibility;
        }
    </style>
</head>
<body class="bg-gray-50 font-sans">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-navy-800 text-white">
            <div class="p-6">
                <h1 class="text-xl font-semibold text-white">TNN Admin</h1>
            </div>
            
            <nav class="mt-6">
                <a href="/admin" class="flex items-center px-6 py-3 text-navy-300 hover:text-white hover:bg-navy-700 transition-colors">
                    <span>Dashboard</span>
                </a>
                <a href="/admin/parents" class="flex items-center px-6 py-3 text-navy-300 hover:text-white hover:bg-navy-700 transition-colors">
                    <span>Parent Leads</span>
                </a>
                <a href="/admin/caregivers" class="flex items-center px-6 py-3 text-navy-300 hover:text-white hover:bg-navy-700 transition-colors">
                    <span>Caregivers</span>
                </a>
                <a href="/admin/newsletter" class="flex items-center px-6 py-3 text-white bg-navy-700 border-r-4 border-blue-500">
                    <span>Newsletter</span>
                </a>
                <a href="/" target="_blank" class="flex items-center px-6 py-3 text-navy-300 hover:text-white hover:bg-navy-700 transition-colors">
                    <span>View Site</span>
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1">
            <div class="p-8">
                <div class="flex justify-between items-center mb-8">
                    <h1 class="text-3xl font-light text-gray-800">Newsletter Subscriptions</h1>
                    <a href="/api/export?type=newsletter" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium">
                        Export CSV
                    </a>
                </div>
                
                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    <!-- Total Subscribers -->
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <div class="text-3xl font-light text-blue-600 mb-2"><%= stats.totalSubscribers || 0 %></div>
                        <div class="text-gray-600 font-medium">Total Subscribers</div>
                        <div class="text-sm text-gray-500 mt-1"><%= stats.subscribersThisWeek || 0 %> this week</div>
                    </div>
                    
                    <!-- This Week -->
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <div class="text-3xl font-light text-green-600 mb-2"><%= stats.subscribersThisWeek || 0 %></div>
                        <div class="text-gray-600 font-medium">This Week</div>
                        <div class="text-sm text-gray-500 mt-1">New subscribers</div>
                    </div>
                    
                    <!-- This Month -->
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <div class="text-3xl font-light text-purple-600 mb-2"><%= stats.subscribersThisMonth || 0 %></div>
                        <div class="text-gray-600 font-medium">This Month</div>
                        <div class="text-sm text-gray-500 mt-1">New subscribers</div>
                    </div>
                </div>

                <!-- Newsletter Subscribers Table -->
                <div class="bg-white rounded-lg shadow-sm">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-xl font-medium text-gray-800">All Newsletter Subscribers</h2>
                    </div>
                    <div class="p-6">
                        <div class="overflow-x-auto">
                            <table class="w-full">
                                <thead>
                                    <tr class="text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        <th class="pb-3">Date</th>
                                        <th class="pb-3">Email</th>
                                        <th class="pb-3">Status</th>
                                    </tr>
                                </thead>
                                <tbody class="text-sm">
                                    <% if (subscribers && subscribers.length > 0) { %>
                                        <% subscribers.forEach(subscriber => { %>
                                        <tr class="border-t border-gray-100 hover:bg-gray-50">
                                            <td class="py-4 text-gray-600"><%= new Date(subscriber.created_at).toLocaleDateString() %></td>
                                            <td class="py-4 text-gray-600">
                                                <a href="mailto:<%= subscriber.email %>" class="text-blue-600 hover:text-blue-700"><%= subscriber.email %></a>
                                            </td>
                                            <td class="py-4">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    Active
                                                </span>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    <% } else { %>
                                    <tr>
                                        <td colspan="3" class="py-12 text-center text-gray-500">
                                            <div class="flex flex-col items-center">
                                                <svg class="w-12 h-12 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                                </svg>
                                                <p class="text-lg font-medium text-gray-600 mb-2">No newsletter subscribers yet</p>
                                                <p class="text-gray-500">Newsletter signups will appear here once users subscribe</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>